<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/agreementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agreement_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/agreementMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agreement_message"
        android:textSize="16sp"
        android:layout_below="@id/agreementTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/agreeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agree"
        android:layout_below="@id/agreementMessage"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_below="@id/agreeButton"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
